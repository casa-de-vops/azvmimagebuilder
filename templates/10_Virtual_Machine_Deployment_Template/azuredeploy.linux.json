{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.1.0.0",
  "parameters": {
    "vmName": {
      "type": "string",
      "defaultValue": "myLinuxVM",
      "allowedValues": [
        "myLinuxVM",
        "rhelLinuxVM",
        "windowsVM"
      ]
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "azureuser"
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "<yourPasswordHere>"
    },
    "gallerySubscriptionId": {
      "type": "string",
      "defaultValue": "b2c5ab64-1473-483f-a839-ef88914ac0b8"
    },
    "galleryResourceGroup": {
      "type": "string",
      "defaultValue": "rg-example-westus2-imagebuilder-001"
    },
    "galleryName": {
      "type": "string",
      "defaultValue": "appImageGallery"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_DS2_v2",
      "allowedValues": [
        "Standard_DS2_v2"
      ]
    },
    "arcInstallScriptUri": {
      "type": "string",
      "defaultValue": "https://aka.ms/azcmagent-install.sh",
      "allowedValues": [
        "https://aka.ms/azcmagent-install.sh"
      ],
      "metadata": {
        "description": "HTTPS URI of the Azure Arc onboarding shell script."
      }
    },
    "subnetId": {
      "type": "string",
      "defaultValue": "/subscriptions/b2c5ab64-1473-483f-a839-ef88914ac0b8/resourceGroups/rg-networking-vmvalidation-westus2-001/providers/Microsoft.Network/virtualNetworks/vnet-networking-vmvalidation-westus2-001/subnets/snet-networking-vmvalidation-westus2-001",
      "metadata": {
        "description": "Resource ID of the subnet to attach the VM's network interface to."
      }
    },
    "imageName": {
      "type": "string",
      "defaultValue": "GoldenLinuxImage",
      "allowedValues": [
        "GoldenLinuxImage",
        "GoldenRHELImage",
        "GoldenWindowsImage"
      ],
      "metadata": {
        "description": "Name of the image in the Shared Image Gallery."
      }
    },
    "imageVersion": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Version of the image in the Shared Image Gallery (e.g., 'latest')."
      }
    },
    "keyVaultId": {
      "type": "string",
      "defaultValue": "/subscriptions/b2c5ab64-1473-483f-a839-ef88914ac0b8/resourceGroups/rg/providers/Microsoft.KeyVault/vaults/sdasfsdfadsfasdfasfasdf",
      "metadata": {
        "description": "The resource ID of the Key Vault containing the certificate."
      }
    },
    "certificateUrl": {
      "type": "string",
      "defaultValue": "https://sdasfsdfadsfasdfasfasdf.vault.azure.net/secrets/dsa/f586579883dc400c835ad975f70093b8",
      "metadata": {
        "description": "The Key Vault secret ID (URI) for the certificate to inject into the VM."
      }
    }
  },
  "variables": {
    "imageId": "[concat('/subscriptions/', parameters('gallerySubscriptionId'), '/resourceGroups/', parameters('galleryResourceGroup'), '/providers/Microsoft.Compute/galleries/', parameters('galleryName'), '/images/', parameters('imageName'), '/versions/', parameters('imageVersion'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2023-09-01",
      "name": "[concat(parameters('vmName'), '-nic')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[parameters('subnetId')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2024-03-01",
      "name": "[parameters('vmName')]",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '-nic'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "secrets": [
            {
              "sourceVault": {
                "id": "[parameters('keyVaultId')]"
              },
              "vaultCertificates": [
                {
                  "certificateUrl": "[parameters('certificateUrl')]"
                }
              ]
            }
          ],
          "customData": "[base64(concat('#!/bin/bash\n', 'curl -fsSL ', parameters('arcInstallScriptUri'), ' | bash'))]"
        },
        "storageProfile": {
          "imageReference": {
            "id": "[variables('imageId')]"
          },
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '-nic'))]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "vmResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachines', parameters('vmName'))]"
    }
  }
}
